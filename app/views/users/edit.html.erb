<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

          <div id="error_explanation" class="text-danger">
            <% if @user.errors.any? %>
            <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
            <% @user.errors.full_messages.each do |message| %>
              <ul>
              <li><%= message %></li>
              </ul>
            <% end %>
            <% end %>
          </div>

        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_field :introduction, id:"inputIntroduction", class: "form-control introduction" %>
          </div>
            <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>